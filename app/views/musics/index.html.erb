<p id="notice"><%= notice %></p>

<h1>Musics</h1>

<table cellspacing='0'>
  <thead>
    <tr>
      <th>Artist</th>
      <th>Title</th>
      <th>Album</th>
      <th>Cover</th>
      <th>Is Favorite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @musics.each do |music| %>
      <tr>
        <td><%= music.artist %></td>
        <td><%= music.title %></td>
        <td><%= music.album %></td>
        <td><%= image_tag music.cover.url(:thumb) %></td>
        <td><%= music.is_favorite %></td>
        <td><%= link_to 'Show', music %></td>
        <td><%= link_to 'Edit', edit_music_path(music) %></td>
        <td><%= link_to 'Destroy', music, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

